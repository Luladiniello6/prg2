<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>
<body>
	<%- include('partials/headerLogueado') %>

	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= producto.nombreProducto %></h2> 
			<p class="product-detail-description">
				<a href="/product-add">Editar</a>
			</p>
		</div>

		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= producto.nombreImagen %>" alt="<%= producto.nombreProducto %>" class="product-detail-img">
					<p class="product-detail-description">
						<%= producto.descripcion %>
					</p>
				</article>

				<div class="col-12 col-lg-4">
					<section class="comments">
						<h4>Comentarios (<%= producto.comentarios.length %>)</h4>

			<% for (let i = 0; i < producto.comentarios.length; i++) { %>
				<article>
					<div class="data">
						<p class="user">
							<strong>
								<a href="/users/perfil/<%= producto.comentarios[i].usuario.id %>">
									<%= producto.comentarios[i].usuario.nombreUsuario %>
								</a>
							</strong>
						</p>
						<p><%= producto.comentarios[i].texto %></p>
					</div>
				</article>
			<% } %>
					</section>

					<form class="form" action="" method="POST">
						<input class="form-input" type="text" name="comentario" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>

	<%- include('partials/footer') %>
</body>
</html>
