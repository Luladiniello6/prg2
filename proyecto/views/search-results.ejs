<!-- Header -->
<%- include('partials/head') %>

<body>
		<%- include('partials/header') %>

	<!-- Resultados de búsqueda -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Resultados de búsqueda</h2>
				</div>

				<% for (let i = 0; i < productos.length; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/<%= productos[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= productos[i].nombreImagen %>" alt="<%= productos[i].nombreProducto %>">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombreProducto %></h2>
								<p><%= productos[i].descripcion %></p>
								<p>
								Subido por:
								<a href="/users/perfil/<%= productos[i].usuario.id %>">
									<%= productos[i].usuario.nombreUsuario %>
								</a>
								</p>
							</article>
							</a>
						</section>
					</div>
				<% } %>
				</div>
		</div>

	<!-- Footer -->
	<%- include('partials/footer') %>
</body>
